<script type="text/javascript">
function init() {
	if(parent && parent!=self){
		$("#outter").attr("class","matter");
	} else {
		$("#outter").attr("class","admin-form");
	}

	if(tek.common.isLoggedIn())
		tek.common.goBack();
	else
		showMessage("请用户登录，没有帐号的用户请选择注册。");

	$("#userlogin").focus();
	
	vcdiv();
}
</script>
