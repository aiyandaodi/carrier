<?xml version="1.0" encoding="UTF-8"?>
<!-- 通信记录 -->
<tekinfo>
  <database>
    <table>
      <message_record>
        <item>
          <!-- 标识 -->
          <message_record_id value="BIGINT NOT NULL PRIMARY KEY"/>
          <!-- 编码 -->
          <message_record_code value="VARCHAR(64) NOT NULL"/>
          <!-- 信息主题 -->
          <message_record_name value="VARCHAR(255) NOT NULL"/>
          
          <!-- 信息内容 -->
          <message_record_content value="MEMO NOT NULL"/>
          
          <!-- 信息所有者 -->
          <message_record_owner value="BIGINT DEFAULT '0' NOT NULL"/>
          <!-- 发送人 -->
          <message_record_sender value="VARCHAR(64) NOT NULL"/>
          <!-- 接收人 -->
          <message_record_receiver value="VARCHAR(64) NOT NULL"/>
          <!-- 接收号码  -->
          <message_record_number value="VARCHAR(64) NOT NULL"/>
          <!-- 转发接收号码 -->
          <message_record_forward value="VARCHAR(255)"/>
          
          <!-- 发送/接收 -->
          <message_record_mode value="SMALLINT DEFAULT '0' NOT NULL"/>
          <!-- 类型 -->
          <message_record_type value="SMALLINT DEFAULT '0' NOT NULL"/>
          
          <!-- 实际发送/接送时间 -->
          <message_record_time value="BIGINT DEFAULT '0' NOT NULL"/>
          <!-- 定时发送时间 -->
          <message_record_ontime value="BIGINT DEFAULT '0' NOT NULL"/>
          
          <!-- 信息状态 -->
          <message_record_status value="SMALLINT DEFAULT '0' NOT NULL"/>
          <!-- 发送次数 -->
          <message_record_times value="SMALLINT DEFAULT '0' NOT NULL"/>
          
          <!-- 归档 -->
          <message_record_archive value="SMALLINT DEFAULT '0' NOT NULL"/>
          
          <!-- 信息收发使用的账号 -->
          <message_record_account value="BIGINT DEFAULT '0' NOT NULL"/>
          
          <!-- 存放的信箱 -->
          <message_box value="BIGINT DEFAULT '0' NOT NULL"/>
          
          <!-- 关联对象名 -->
          <message_record_link value="VARCHAR(32) NOT NULL"/>
          <!-- 关联对象 -->
          <message_record_linkId value="BIGINT DEFAULT '0' NOT NULL"/>
          
          <createTime value="BIGINT DEFAULT '0' NOT NULL"/>
          <createIp value="BIGINT DEFAULT '0' NOT NULL"/>
          <modifyTime value="BIGINT DEFAULT '0' NOT NULL"/>
          <modifyIp value="BIGINT DEFAULT '0' NOT NULL"/>
          <accessTime value="BIGINT DEFAULT '0' NOT NULL"/>
          <accessIp value="BIGINT DEFAULT '0' NOT NULL"/>
          <accessCount value="INT DEFAULT '0' NOT NULL"/>
        </item>
      </message_record>
    </table>
  </database>
</tekinfo>